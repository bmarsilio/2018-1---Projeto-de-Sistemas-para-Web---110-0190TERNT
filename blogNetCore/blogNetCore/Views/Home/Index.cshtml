<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            
            @foreach (var item in ((List<Post>) ViewData["posts"]))
            {
                <div class="post-preview">
                    <a href="/Home/Post/@item.id">
                        <h2 class="post-title">
                            @item.titulo
                        </h2>
                        <h3 class="post-subtitle">
                            @item.resumo
                        </h3>
                    </a>
                    <p class="post-meta">@item.tag</p>
                </div>
                <hr>
            }
           
        </div>
    </div>
</div>