@{
    ViewData["Title"] = "Formulario";
}
<h2>@ViewData["Title"]</h2>

<div class="container">
    
    <a href="/Categoria" class="btn btn-default">
        Voltar
    </a>
    
    <form action="/Categoria/AlteraCategoria" method="POST">
        
        <p>ProdutoId: @ViewBag.CategoriaId</p>
                
        <input type="hidden" value="@ViewBag.CategoriaId" name="categoriaProduto.Id"/>
        
        <div class="form-group">
            <label for="nome">Descrição:</label>
            <input type="text" class="form-control" name="categoriaProduto.Descricao" id="categoriaProduto.Descricao" />
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Gravar"/>
        </div>
        
    </form>
    
</div>